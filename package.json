{
  "name": "mdemits",
  "version": "0.0.1",
  "description": "Use the most common markdown to generate modern HTML documents",
  "main": "index.js",
  "type": "module",
  "bin": "bin/mdemits.js",
  "types": "dist/types/shared.d.ts",
  "scripts": {
    "build": "node scripts/build.js",
    "build:ui": "vite build",
    "scss": "sass --no-source-map --watch src/layout/stylus:src/layout/styles",
    "stylus": "stylus src/layout/stylus --out src/layout/styles -w",
    "dev": "vite",
    "css": "postcss ./src/layout/input.css -o ./src/layout/index.css --watch --verbose",
    "twcss": "tailwindcss -i ./src/layout/input.css -o ./src/layout/index.css --watch",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/littlefatcat163/mdemits.git"
  },
  "keywords": [
    "markdown",
    "html",
    "ssg",
    "vue"
  ],
  "author": "littlefatcat",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/littlefatcat163/mdemits/issues"
  },
  "homepage": "https://github.com/littlefatcat163/mdemits#readme",
  "devDependencies": {
    "@types/clipboard": "^2.0.7",
    "@types/html-minifier": "^4.0.5",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/markdown-it": "^14.1.1",
    "@types/markdown-it-container": "^2.0.10",
    "@types/mime-types": "^2.1.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.11",
    "@types/nprogress": "^0.2.3",
    "@varlet/preset-tailwindcss": "^3.4.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "bootstrap-vue-next": "^0.24.18",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy-watch": "^2.3.1",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.2.0",
    "sass": "1.77.6",
    "stylus": "^0.63.0",
    "tailwindcss": "^3.4.7",
    "tailwindcss-primeui": "^0.3.4",
    "typescript": "^5.5.3",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@koa/router": "^13.0.0",
    "@mdit-vue/plugin-frontmatter": "^2.1.3",
    "@mdit-vue/plugin-headers": "^2.1.3",
    "@mdit-vue/shared": "^2.1.3",
    "chalk": "^5.3.0",
    "clipboard": "^2.0.11",
    "esbuild": "^0.23.0",
    "esbuild-plugin-mdmits-vue": "^0.0.4",
    "highlight.js": "^11.10.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.1.1",
    "koa": "^2.15.3",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "moment-timezone": "^0.5.46",
    "nprogress": "^0.2.0",
    "photoswipe": "^5.4.4",
    "vite": "^5.4.3",
    "vue": "^3.5.3"
  }
}
